{
  "preset": "react-native",
  "setupFilesAfterEnv": ["<rootDir>/jest-setup.js"],
  "transformIgnorePatterns": [
    "node_modules/(?!(react-native|@react-native|react-native-.*|@react-navigation|expo|@expo|@gorhom|styled-components)/)"
  ],
  "testMatch": [
    "**/__tests__/**/*.(js|jsx|ts|tsx)",
    "**/*.(test|spec).(js|jsx|ts|tsx)"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!src/**/*.d.ts",
    "!src/**/__tests__/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "text-summary", "html"]
}
